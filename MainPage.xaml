<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zadanie0902KB.MainPage">

    <ScrollView BackgroundColor="Beige">
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout
                HorizontalOptions="Center">
                <DatePicker
                    x:Name="dateStart"/>
                <TimePicker
                    x:Name="timeStart"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout
                HorizontalOptions="Center">
                <DatePicker
                    x:Name="dateEnd"/>
                <TimePicker
                    x:Name="timeEnd"/>
            </HorizontalStackLayout>
            <Label
                x:Name="jsonData" />

            <Button
                Text="Wyślij date"
                Clicked="btnJson"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
